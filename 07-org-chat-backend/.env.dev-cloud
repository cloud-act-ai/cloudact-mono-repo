# =============================================
# CLOUDACT CHAT BACKEND - Dev-Cloud Environment
# =============================================
# Local development pointing to cloudact-testing-1 GCP project
# Port 8002 (internal service, accessed by frontend proxy)
# =============================================

# =============================================
# GCP CONFIGURATION
# =============================================
GCP_PROJECT_ID=cloudact-testing-1
GOOGLE_APPLICATION_CREDENTIALS=/home/user/.gcp/cloudact-testing-1-sa.json
BIGQUERY_LOCATION=US

# =============================================
# KMS ENCRYPTION (must match api-service)
# =============================================
KMS_PROJECT_ID=cloudact-testing-1
KMS_LOCATION=us-central1
KMS_KEYRING=cloudact-keyring-test
KMS_KEY=api-key-encryption

# =============================================
# SECURITY (must match api-service)
# =============================================
CA_ROOT_API_KEY=test-api-key-for-cloudact-testing-32chars
DISABLE_AUTH=false

# =============================================
# APPLICATION
# =============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
API_HOST=0.0.0.0
API_PORT=8002

# =============================================
# CORS (Frontend only)
# =============================================
CORS_ORIGINS=["http://localhost:3000"]

# =============================================
# BIGQUERY
# =============================================
ORGANIZATIONS_DATASET=organizations
BQ_QUERY_TIMEOUT_MS=30000
BQ_MAX_BYTES_GATE=10737418240

# =============================================
# CHAT DEFAULTS
# =============================================
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096
DEFAULT_MAX_HISTORY=50

# =============================================
# SUPABASE (Test Instance - auth validation)
# =============================================
SUPABASE_URL=https://kwroaccbrxppfiysqlzs.supabase.co
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY
