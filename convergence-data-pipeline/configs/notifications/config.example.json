{
  "enabled": true,
  "description": "Example root notification configuration - Copy to config.json and update credentials",
  "default_provider": "email",

  "email": {
    "enabled": true,
    "smtp_host": "smtp.gmail.com",
    "smtp_port": 587,
    "smtp_username": "your-email@example.com",
    "smtp_password": "your-app-password-here",
    "smtp_use_tls": true,
    "from_email": "noreply@cloudact.io",
    "from_name": "CloudAct Platform",
    "to_emails": ["admin@example.com", "alerts@example.com"],
    "cc_emails": ["team@example.com"],
    "subject_prefix": "[CloudAct Alert]"
  },

  "slack": {
    "enabled": true,
    "webhook_url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
    "channel": "#cloudact-alerts",
    "username": "CloudAct Bot",
    "icon_emoji": ":robot_face:",
    "mention_users": ["U1234567890", "U0987654321"],
    "mention_channel": true
  },

  "event_triggers": [
    {
      "event": "pipeline_started",
      "enabled": false,
      "severity": "info",
      "providers": ["slack"],
      "template": null,
      "cooldown_seconds": null
    },
    {
      "event": "pipeline_success",
      "enabled": true,
      "severity": "info",
      "providers": ["slack"],
      "template": null,
      "cooldown_seconds": null
    },
    {
      "event": "pipeline_failure",
      "enabled": true,
      "severity": "error",
      "providers": ["both"],
      "template": null,
      "cooldown_seconds": 300
    },
    {
      "event": "pipeline_warning",
      "enabled": true,
      "severity": "warning",
      "providers": ["email"],
      "template": null,
      "cooldown_seconds": 600
    },
    {
      "event": "data_quality_failure",
      "enabled": true,
      "severity": "warning",
      "providers": ["both"],
      "template": null,
      "cooldown_seconds": 600
    },
    {
      "event": "data_quality_warning",
      "enabled": true,
      "severity": "warning",
      "providers": ["slack"],
      "template": null,
      "cooldown_seconds": 1800
    },
    {
      "event": "rate_limit_exceeded",
      "enabled": true,
      "severity": "warning",
      "providers": ["email"],
      "template": null,
      "cooldown_seconds": 1800
    },
    {
      "event": "system_error",
      "enabled": true,
      "severity": "critical",
      "providers": ["both"],
      "template": null,
      "cooldown_seconds": 300
    }
  ],

  "retry_config": {
    "max_attempts": 3,
    "initial_delay_seconds": 5,
    "max_delay_seconds": 300,
    "exponential_backoff": true
  },

  "timeout_seconds": 30
}
