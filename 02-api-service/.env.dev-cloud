# =============================================
# CLOUDACT API SERVICE - Dev-Cloud Environment
# =============================================
# Local development pointing to cloudact-testing-1 GCP project
# Uses test Supabase instance (kwroaccbrxppfiysqlzs)
# =============================================

# =============================================
# GCP CONFIGURATION
# =============================================
GCP_PROJECT_ID=cloudact-testing-1
GOOGLE_APPLICATION_CREDENTIALS=/home/user/.gcp/cloudact-testing-1-sa.json
BIGQUERY_LOCATION=US

# =============================================
# KMS ENCRYPTION
# =============================================
KMS_PROJECT_ID=cloudact-testing-1
KMS_LOCATION=us-central1
KMS_KEYRING=cloudact-keyring-test
KMS_KEY=api-key-encryption

# =============================================
# SECURITY
# =============================================
CA_ROOT_API_KEY=test-api-key-for-cloudact-testing-32chars
API_KEY_SECRET_KEY=test-api-key-secret-for-signing-32ch
DISABLE_AUTH=false
RATE_LIMIT_ENABLED=true

# =============================================
# APPLICATION
# =============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
EXPOSE_ERROR_DETAILS=true
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
ENABLE_API_DOCS=true

# =============================================
# CORS (Frontend + Chat Backend)
# =============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8002"]

# =============================================
# PIPELINE SERVICE URL
# =============================================
PIPELINE_SERVICE_URL=http://localhost:8001

# =============================================
# SUPABASE (Test Instance)
# =============================================
SUPABASE_URL=https://kwroaccbrxppfiysqlzs.supabase.co
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY

# =============================================
# NOTIFICATIONS (Disabled for dev)
# =============================================
NOTIFICATIONS_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=false
